# Neon Postgres connection string for Coach CRM & Client Portal
# Create a separate Neon project / database for this app and paste the connection string here.
DATABASE_URL="postgresql://user:password@host/dbname?sslmode=require"

# Clerk auth (fill with your keys from Clerk dashboard)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxx"
CLERK_SECRET_KEY="sk_test_xxx"

# Google Calendar (OAuth 2.0 from Google Cloud Console)
# Create OAuth 2.0 Client ID (Web application), add redirect URI: https://your-domain/api/calendar/google/callback
GOOGLE_CLIENT_ID="xxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="xxx"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: for db init backfill when adding user_id to weekly_availability/bookings/clients (Clerk user ID)
# DEFAULT_COACH_USER_ID="user_xxx"

# Resend email service (for booking confirmations and reminders)
# Get API key from https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxx"
# Email address to send from (use verified domain in production, onboarding@resend.dev for testing)
RESEND_FROM_EMAIL="onboarding@resend.dev"

# Cron job security token (for /api/cron/send-booking-reminders endpoint)
# Generate with: openssl rand -hex 32
CRON_SECRET_TOKEN="your_secret_token_here"

# cron-job.org API key (optional – for scripts/setup-cron-job.js to create the job automatically)
# Get it at https://cron-job.org → Settings → API
# CRON_JOB_ORG_API_KEY="your_api_key"

